# Example environment variables for IoT Security Simulation
# Copy this file to .env and adjust values as needed

# === MQTT BROKER ===
MQTT_HOST=mosquitto
MQTT_PORT=1883
MQTT_SECURE_PORT=8883
MQTT_USERNAME=iot_user
MQTT_PASSWORD=iot_secure_password_2024

# === SENSOR SECURITY ===
# HMAC keys for each sensor (32 bytes hex)
SENSOR_TEMP_HMAC_KEY=a1b2c3d4e5f6789abcdef0123456789abcdef0123456789abcdef0123456789a
SENSOR_HUMIDITY_HMAC_KEY=b2c3d4e5f6789abcdef0123456789abcdef0123456789abcdef0123456789ab1
SENSOR_WIND_HMAC_KEY=c3d4e5f6789abcdef0123456789abcdef0123456789abcdef0123456789abc2

# AES-GCM encryption key (32 bytes hex)
AES_GCM_KEY=d4e5f6789abcdef0123456789abcdef0123456789abcdef0123456789abcde3

# === TIMING & VALIDATION ===
# Timestamp validation window in seconds
TIMESTAMP_WINDOW_SECONDS=120
# Nonce cache size for replay protection
NONCE_CACHE_SIZE=10000

# === RATE LIMITING ===
# Messages per minute per sensor
RATE_LIMIT_PER_MINUTE=60
# Burst capacity
RATE_LIMIT_BURST=10

# === FOG SERVICE ===
FOG_HOST=fog
FOG_PORT=8000
FOG_LOG_LEVEL=INFO

# === CLOUD SERVICE ===
CLOUD_HOST=cloud
CLOUD_PORT=8443
CLOUD_LOG_LEVEL=INFO
CLOUD_DB_URL=sqlite:///./app.db

# === JWT AUTHENTICATION ===
# JWT secret for service-to-service communication (32 bytes hex)
JWT_SECRET_KEY=e5f6789abcdef0123456789abcdef0123456789abcdef0123456789abcdef4
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# === API KEYS ===
# API key for fog -> cloud communication
FOG_API_KEY=fog_api_key_2024_secure_random_string_here
# Admin API key for management operations
ADMIN_API_KEY=admin_api_key_2024_secure_random_string_here

# === SENSOR PUBLISHING INTERVALS ===
# Sensor data publishing interval in seconds
SENSOR_TEMP_INTERVAL=10
SENSOR_HUMIDITY_INTERVAL=15
SENSOR_WIND_INTERVAL=12

# === SECURITY FLAGS ===
# Enable/disable various security features
ENABLE_ENCRYPTION=true
ENABLE_SIGNATURE_VERIFICATION=true
ENABLE_TIMESTAMP_VALIDATION=true
ENABLE_NONCE_VALIDATION=true
ENABLE_RATE_LIMITING=true
ENABLE_TLS=true

# === DEMO MODE ===
# Demo scenario configuration
DEMO_DURATION_SECONDS=60
DEMO_ATTACK_INTENSITY=high

# === LOGGING ===
LOG_FORMAT=json
LOG_LEVEL=INFO